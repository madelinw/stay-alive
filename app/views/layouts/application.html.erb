<!DOCTYPE html>
<html>
<head>
  <title>Stay Alive with Checklists</title>
  <%= stylesheet_link_tag    "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

 <%= yield %>

  <div id="checklistapp">
  <div class="title">
    <h1>Stay Alive with Checklists</h1>
  </div>

  <div class="content" id="main">

    <div id="lists">
      <input class="toggle mark-all-done" type="checkbox" />
      <label for="check-all" id="toggle-all">Mark all as complete</label>
      <ul id="check-list"></ul>
    </div>

    <div id="create-item">
      <input id="new-checklist" placeholder="Add a Task" type="text" />
    </div>
  </div>

  <div id="stats-template"></div>
  </div>

  <script type="text/x-handlebars-template" id="item-template">
    <div class="checklist {{#if done }} done {{/if}}">
      <div class="display">
        <input class="toggle" type="checkbox" {{# if done }} checked="checked" {{/if}} />
        <label class="view">{{ title }}</label>
        <a class="destroy" href="#"></a>
      </div>
      <div class="edit">
        <input class="edit" type="text" value="{{ title }}" />
      </div>
    </div>
  </script>
  <script type="text/x-handlebars-template" id="stats-template">
    {{ if (done) }}
      <span class="checklist-clear">
        <a href="#">
          Clear <span class="number-done">{{ done }}</span>
          completed <span class="word-done">{{# if done == 1 }} item {{else}} items {{/if}}</span>
        </a>
      </span>
    {{ end }}
  </script>

<footer></footer>
<%= javascript_include_tag "application" %>

</body>
</html>
